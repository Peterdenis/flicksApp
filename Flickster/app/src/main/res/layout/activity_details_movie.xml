<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.peterson.flickster.DetailsMovieActivity">


    <!--<TextView-->
        <!--android:id="@+id/tvDetailsTitle"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="TextView"-->
        <!--tools:ignore="HardcodedText" />-->

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:scaleType="fitCenter"
        app:srcCompat="@mipmap/ic_launcher"
        tools:ignore="ContentDescription"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RatingBar
        android:id="@+id/tvRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/tvDetailsTitle"
        android:layout_marginTop="19dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvRating"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:text="@string/popularity"
        android:textColor="@android:color/black" />

    <ImageButton
        android:id="@+id/imBtnMovie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:alpha="0.5"
        android:background="@drawable/roundcorner"
        android:src="@drawable/play_button"
        android:tint="?android:attr/colorPrimary"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tvDetailsOverview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/DateRelease"
        android:layout_alignStart="@+id/DateRelease"
        android:layout_below="@+id/DateRelease"
        android:layout_marginTop="22dp"
        android:text="TextView"
        android:textColor="@android:color/black"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tvDetailsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="12dp"
        android:text="TextView"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/DateRelease"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/textView"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textColor="@android:color/black"
        tools:ignore="HardcodedText" />

</RelativeLayout>
